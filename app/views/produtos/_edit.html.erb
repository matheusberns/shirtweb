<title>Editar produto</title>
<%= form_for @produto do |form| %>
  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :descricao %>
    <%= form.text_area :descricao, class: "form-control", rows: "4" %>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= form.label :quantidade %>
      <%= form.number_field :quantidade, step: 1, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :preco %>
      <%= form.number_field :preco, min: 1, step: 0.1, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :department %>
      <%= form.collection_select :department_id, @departments, :id, :nome, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :url_image %>
      <%= form.text_field :url_image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :url_image, style: "color: transparent" %>
      <%= form.submit "Editar produto", class: " form-control btn btn-success" %>
    </div>
    <div class="form-group">
      <%= form.label :produto_imagem %>
      <%= form.file_field :produto_imagem, class: "form-control" %>
    </div>
  </div>
<% end %>