<title>Novo produto</title>
<%= form_for @produto do |form| %>

  <div class="form-row">
    <div class="col-md-3 mb-6">
      <%= form.label :nome %>
      <%= form.text_field :nome, class: "form-control" %>
    </div>
    <div class="col-md-3 mb-6">
      <%= form.label :quantidade %>
      <%= form.number_field :quantidade, step: 1, class: "form-control" %>
    </div>
    <div class="col-md-3 mb-3">
      <%= form.label :preco %>
      <%= form.number_field :preco, min: 1, step: 0.1, class: "form-control" %>
    </div>
    <div class="col-md-3 mb-3">
      <%= form.label :department %>
      <%= form.collection_select :department_id, @departments, :id, :nome, {}, class: "form-control" %>
    </div>
    <div class="col-md-12 mb-3 ws">
      <%= form.label :descricao %>
      <%= form.text_area :descricao, class: "form-control", rows: "4" %>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 mb-3">
      <div class="md-form">
        <div class="file-field ws">
          <div class="btn btn-primary">
            <%= form.label :produto_imagem %>
            <%= form.file_field :produto_imagem, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-3">
    <%= form.label :url_image, style: "color: transparent" %>
    <%= form.submit "Criar produto", class: " form-control btn btn-primary" %>
  </div>


<% end %>