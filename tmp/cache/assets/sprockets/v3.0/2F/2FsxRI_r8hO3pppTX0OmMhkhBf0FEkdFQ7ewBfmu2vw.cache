    },
    speak: function(msg) {
      return this.perform('speak', {
        message: msg
      });
    }
  });

  $(document).on('keypress', '[data-behavior=room_speaker]', function(event) {
    if (event.keyCode === 13) {
      App.chat.speak(event.target.value);
      event.target.value = "";
      return event.preventDefault();
    }
  });

}).call(this);
